<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="MuseoAmericano" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>persistence.MuFichas</class>
    <class>persistence.MuEntradas</class>
    <class>persistence.MuEspecie</class>
    <class>persistence.MuColecciones</class>
    <class>persistence.MuTematicas</class>
    <class>persistence.MuTransaccion</class>
    <class>persistence.MuMuseos</class>
    <class>persistence.MuPrecios</class>
    <class>persistence.MuComision</class>
    <class>persistence.MuSalas</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/museum?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="mysql1234"/>
    </properties>
  </persistence-unit>
</persistence>
